<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Page</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <h1 class="text-center my-5">Product Page</h1>
    <div class="d-flex flex-column">
      <div class="d-flex justify-content-end my-3 mx-5 text-right">
        <div class="d-flex flex-wrap justify-content-around">

          <div class="btn-group" role="group" aria-label="Third group">
            <a href="/customer/status"
              ><button type="button" class="btn btn-outline-info">Cart</button>
            </a>
          </div>

          <div class="btn-group mx-2" role="group" aria-label="Third group">
            <a href="/customer/status"
              ><button type="button" class="btn btn-outline-info">
                Order Status
              </button>
            </a>
          </div>

          <div class="btn-group" role="group" aria-label="Third group">
            <form action="/logout?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
          </div>
        </div>
      </div>

      <div class="container mt-3">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Type</th>
              <th scope="col">Price(Rs.)</th>
              <!-- <th scope="col">To Update</th> -->
              <th scope="col">To Order</th>
            </tr>
          </thead>
          <tbody>
            <%for(var i=0;i < products.length;i++){%>
            <tr>
              <th scope="row"><%=i+1%></th>
              <td><%=products[i].title%></td>
              <td><%=products[i].product_type%></td>
              <td><%=products[i].price%></td>
              <!-- <td>
                            <a href="/admin/update/<%=products[i]._id%>"><button
                                    class="btn btn-info btn-sm">Update</button></a>
                        </td> -->
              <td>
                <!-- //redirect to order status -->
                <a href="customer/order/<%=products[i]._id%>"
                  ><button class="btn btn-outline-primary btn-sm">
                    Add to cart
                  </button></a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
